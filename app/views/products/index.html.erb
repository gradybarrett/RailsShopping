<p id="notice"><%= notice %></p>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h2 class="panel-title">
      Products
    </h2>
  </div>

  <div class="panel-body">
    <table class="table table-striped table-hover table-condensed">
      <thead>
      <tr>
        <th>Product sku</th>
        <th>Product name</th>
        <th>Product type</th>
        <th>Price</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= link_to product.sku, product_path(product), class: 'btn btn-link' %></td>
          <td><%= link_to product.name, product_path(product), class: 'btn btn-link' %></td>
          <td><%= product.type %></td>
          <td><%= number_to_currency(product.price) %></td>
          <td><%= link_to 'Show', product, class: 'btn btn-info' %></td>
          <td><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-primary' %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <%= link_to 'New Product', new_product_path, class: 'btn btn-success' %>
  </div>
</div>